<% if notice %>
   <%= notice %>
 <%end%>   

<%= form_for(@client, url: {action: :login}, method: :post, html:{class: 'form-horizontal'}) do |f| %>
	<div class='form-group'>
		<br>
		<%= f.label :email, class: 'col-sm-2 control-label' %>
		<div class= "col-sm-10">
		<%= f.text_field :email%> 
		</div>
	</div>
	<div class='form-group'>
		<%= f.label :password, class: 'col-sm-2 control-label'%> 
		<div class= "col-sm-10">
		<%= f.password_field :password%> 
		</div>
	</div>
<% if flash[:error] %>
<div class='error'>
	<%= flash[:error] %> 
</div>
<%end%> 
 <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
	<%= f.submit 'Submit', class: 'btn btn-primary btn-lg'%> 
    </div>
  </div>
<%end%> 