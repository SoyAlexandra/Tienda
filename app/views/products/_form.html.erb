<% if !@product.errors.empty? %>
	<ol>
		<% @product.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
	<% end %>
	</ol>
<% end %>

<h2>Product Detail </h2>

<%= form_for @product do |f| %>
	<%=f.label "Reference:" %>
	<%=f.text_field :ref %>
	<br>
	<br>
	<%=f.label "Name" %>
	<%=f.text_field :name %>
	<br>
	<br>
	<%=f.label "Price $" %>
	<%=f.text_field :price %>
	<br>
	<br>
	<%=f.label "Quantity" %>
	<%=f.text_field :quantity %>
	<br>
	<br>
	<%=f.label "Brand" %>
	<%=f.select :brand, options_for_select(["Zara", "MNG", "PatPrimo"]) %>
	<br>
	<br>
	<%=f.label "Desription" %>
	<%=f.text_field :description %>
	<br>
	<br>
	<%=f.label "Size" %>
	<%=f.select :size, options_for_select(["XS", "S", "M", "L", "XL"]) %>
	<br>
	<br>
	<%=f.label "Color" %>
	<%=f.text_field :color %>
	<%=f.submit%>

	<% end %>